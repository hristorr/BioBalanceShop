@model CartServiceModel

@{
    ViewBag.Title = "Cart";
}

<h2>Your Shopping Cart</h2>
@if (Model.Items.Any())
{
    <form asp-controller="Cart" asp-action="UpdateCart" method="Post">
    <table>
        <thead>
            <tr>
                <th colspan="2">Product</th>
                <th>Quantity</th>
                <th colspan="2">Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td><img src="@item.ImageURL" alt="ProductImage" width="100" height="100" /></td>
                    <td>@item.Title</td>
                    <td><input name="productQuantities[@item.ProductId]" type="number" max="@item.QuantityInStock" min="1" value="@item.QuantityToOrder" /></td>
                    <td>
                        @if (item.CurrencyIsSymbolPrefix)
                        {
                            @item.CurrencySymbol
                        }
                        @String.Format("{0:f2}", item.Price * item.QuantityToOrder)
                        @if (!item.CurrencyIsSymbolPrefix)
                        {
                            @item.CurrencySymbol
                        }
                    </td>
                    <td><input type="checkbox" name="RemovedProductIds" value="@item.ProductId" /> Remove</td>
                </tr>
            }
            <tr>
                <th>Total Price:</th>
                <td>
                    @if (Model.CurrencyIsSymbolPrefix)
                    {
                        @Model.CurrencySymbol
                    }
                    @String.Format("{0:f2}", Model.TotalPrice)
                    @if (!Model.CurrencyIsSymbolPrefix)
                    {
                        @Model.CurrencySymbol
                    }
                </td>
            </tr>
        </tbody>
    </table>
    <input type="submit" value="Update Cart" class="btn btn-primary" />
    </form>
    <div>
        <input type="button" value="Proceed to Checkout" onclick="location.href='@Url.Action("Checkout", "Payment")'" />
    </div>
}
else
{
    <p>Your cart is empty.</p>
}