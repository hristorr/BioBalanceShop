@model CartServiceModel

<h2>Your Shopping Cart</h2>
@if (Model.Items.Any())
{
    <table>
        <thead>
            <tr>
                <th>Product ID</th>
                <th colspan="2">Product</th>
                <th>Quantity</th>
                <th colspan="2">Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.ProductId</td>
                    <td>@item.Title</td>
                    <td><img src="@item.ImageURL" alt="ProductImage" width="100" height="100" /></td>
                    <td><input name="quantity" type="number" max="@item.QuantityInStock" min="1" value="@item.QuantityToOrder" /></td>
                    <td>
                        @if (item.CurrencyIsSymbolPrefix)
                        {
                            @item.CurrencySymbol
                        }
                        @String.Format("{0:f2}", item.Price)
                        @if (!item.CurrencyIsSymbolPrefix)
                        {
                            @item.CurrencySymbol
                        }
                    </td>
                </tr>
            }
            <tr>
                <th>Total Price:</th>
                <td>
                    @if (Model.CurrencyIsSymbolPrefix)
                    {
                        @Model.CurrencySymbol
                    }
                    @String.Format("{0:f2}", Model.TotalPrice)
                    @if (!Model.CurrencyIsSymbolPrefix)
                    {
                        @Model.CurrencySymbol
                    }
                </td>
            </tr>
        </tbody>
    </table>
}
else
{
    <p>Your cart is empty.</p>
}
