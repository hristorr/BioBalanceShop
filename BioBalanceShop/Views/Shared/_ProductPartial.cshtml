@model ProductServiceModel
@inject IProductService productService

<div class="col-md-4">
    <div class="card mb-3">
        <img class="card-img-top" src="@Model.ImageUrl" alt="Product Image">
        <div class="card-body text-center">
            <h4>@Model.Title</h4>
            <h6><b>@String.Format("{0:f2}", Model.Price) EUR</b></h6>
        </div>
    </div>
</div>