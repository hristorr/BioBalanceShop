@model AdminShopSettingsFormModel

@{
    ViewBag.Title = "Edit Shop Settings";
}

<head>
    <style>
        #closeMsg:hover {
            color: #214f21;
            cursor: pointer;
        }
    </style>
</head>

@if (!string.IsNullOrEmpty(ViewBag.ShopSettingsUpdatedMessage))
{
    <span id="updatedShopSettingsMsg" style="color: white; background-color:#214f21; padding: 10px; width: 100%; font-weight:bold; font-size: 2em; display: block; text-align: center">@ViewBag.ShopSettingsUpdatedMessage<span id="closeMsg" style="float: right; padding-right: 5px;">X</span></span>
}

<h1>Edit Shop Settings</h1>

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <div class="form-group">
                <label asp-for="@Model.CurrencyId">Currency:</label>
                <select asp-for="@Model.CurrencyId" class="form-control">
                    @foreach (var currency in Model.Currencies)
                    {
                        if (currency.Id == @Model.CurrencyId)
                        {
                            <option value="@currency.Id" selected>@currency.CurrencyCode ( @currency.CurrencySymbol )</option>
                        }
                        else
                        {
                            <option value="@currency.Id">@currency.CurrencyCode ( @currency.CurrencySymbol )</option>
                        }
                    }
                </select>
                <span asp-validation-for="@Model.CurrencyId" class="small text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="@Model.ShippingFeeRate"></label>
                <input asp-for="@Model.ShippingFeeRate" class="form-control" placeholder="Shipping fee rate as a percentage of order amount...">
                <span asp-validation-for="@Model.ShippingFeeRate" class="small text-danger"></span>
            </div>
            <div class="text-center">
                <input class="btn btn-primary mt-3" type="submit" value="Save" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $("#closeMsg").on("click", function () {
            $("#updatedShopSettingsMsg").css("display", "none");
        });
    </script>
}
