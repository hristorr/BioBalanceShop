﻿@{
    ViewData["Title"] = "Dashboard";
}

<div class="mt-4 p-5 bg-light text-center">
    <h2 class="display-4">Hello, Admin!</h2>
    <p class="lead mb-1 mt-3"> This is your administrator area - you can <b>read</b>, <b>create</b>, <b>delete</b> and <b>edit</b> products. <br />You can <b>edit</b> the shop <b>currency</b> and change the <b>shipping fee rate</b> applied to products in cart as a percentage of the cart total amount</p>
    <p class="lead mt-1"> You can also manage <b>all users</b> and edit their <b>roles</b> in the system.</p>
    <hr class="my-4">
    <a asp-area="" asp-controller="Product" asp-action="All" class="btn btn-primary btn-lg">All Products</a>
    <a asp-area="" asp-controller="Product" asp-action="Add" class="btn btn-primary btn-lg">Add Product</a>
    <a asp-area="Admin" asp-controller="User" asp-action="All" class="btn btn-primary btn-lg">All Users</a>
</div>